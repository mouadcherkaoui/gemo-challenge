{
  "functions": {
    "source": "/",
    "predeploy": "npm run build:api"
  },
  "hosting": [
    {
      "target": "challenge",
      "predeploy": "npm run ng:build:prod",
      "public": "dist/apps/challenge",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
